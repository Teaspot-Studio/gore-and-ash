                     , gore-and-ash
                     , deepseq >= 1.4
                     , mtl >= 2.2
                     , GLFW-b >= 1.4.7
                     , stm >= 2.4
                     , transformers >= 0.4.2
                     , unordered-containers >= 0.2.5
                     , hashable >= 1.2.3
                     , extra >= 1.4.2
                     , netwire >= 5.0.1

