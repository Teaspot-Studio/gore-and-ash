  hs-source-dirs:      src
  exposed-modules:     Game.GoreAndAsh.GLFW
                       Game.GoreAndAsh.GLFW.API
                       Game.GoreAndAsh.GLFW.Module
                       Game.GoreAndAsh.GLFW.State

  default-language:    Haskell2010
