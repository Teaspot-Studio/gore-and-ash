name:                gore-and-ash
version:             0.1.0.0
synopsis:            Simple project template from stack
description:         Please see README.md
homepage:            http://github.com/githubuser/gore-and-ash#readme
license:             BSD3
license-file:        LICENSE
author:              Anton Gushcha
maintainer:          ncrashed@gmail.com
copyright:           2015 Anton Gushcha
category:            Game
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Game.GoreAndAsh
                       Game.GoreAndAsh.Core
                       Game.GoreAndAsh.Core.Arrow
                       Game.GoreAndAsh.Core.Monad
                       Game.GoreAndAsh.Core.Session
                       Game.GoreAndAsh.Core.State

  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , mtl >= 2.2
                     , transformers >= 0.4
                     , netwire >= 5.0.1
                     , deepseq >= 1.4
                     , exceptions >= 0.8.0.2
                     , containers >= 0.5.6.2
                     , unordered-containers >= 0.2.5.1
                     , hashable >= 1.2.3.3
                     
  default-extensions:  Arrows
                       DataKinds
                       DeriveGeneric
                       FlexibleInstances
                       FunctionalDependencies
                       GeneralizedNewtypeDeriving
                       MultiParamTypeClasses
                       RecordWildCards
                       ScopedTypeVariables
                       TypeFamilies
                       TypeOperators
                       UndecidableInstances